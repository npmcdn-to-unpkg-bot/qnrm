html {
  width: 100%;
  height: 100%;
  margin: 0px;
  padding: 0px;
  overflow: hidden;
}
body {
  width: 100%;
  height: 100%;
  margin: 0px;
  padding: 0px;
  overflow: hidden;
}
* {
  box-sizing: border-box;
  font-family: "Heiti SC", "Microsoft YaHei";
  font-size: 10px;
}
.header {
  position: absolute;
  top: 0px;
  left: 0px;
  right: 0px;
  height: 40px;
}
.header .menu {
  list-style: none;
  margin: 0px;
  padding: 0px;
}
.header .menu > li {
  display: inline-block;
}
.header .menu > li > a {
  height: 40px;
  line-height: 40px;
}
.list-container {
  position: absolute;
  top: 40px;
  left: 0px;
  right: 0px;
  bottom: 0px;
  padding: 10px;
  border: 1px solid #eee;
  background-image: radial-gradient(#666, #333);
  overflow: auto;
}
.preview {
  position: relative;
  width: 180px;
  overflow: hidden;
  margin: 5px;
  float: left;
  text-align: center;
}
.preview > .image-wrapper {
  width: 180px;
  height: 135px;
  overflow: hidden;
  box-shadow: inset 1px 1px 1px rgba(0, 0, 0, 0.25);
}
.preview > .image-wrapper > .image {
  width: 100%;
  height: 100%;
}
.preview > .filename {
  font-size: 10px;
  height: 36px;
  line-height: 36px;
  color: #fff;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 0px 5px;
}
.preview.selected {
  background-color: #4285f4;
  box-shadow: 0 2px 8px 0 rgba(0, 0, 0, 0.25);
}
.wait-list-container {
  width: 300px;
  height: 200px;
  background: #fff;
  z-index: 100;
  clear: both;
  position: absolute;
  bottom: -170px;
  left: 0px;
  box-shadow: 1px 1px 5px rgba(65, 99, 119, 0.2);
}
.wait-list-container > .toggle {
  height: 30px;
  line-height: 30px;
  padding: 0 10px;
  border-bottom: 1px solid #eee;
  font-weight: blod;
}
.wait-list-container > .item {
  position: relative;
  height: 40px;
  line-height: 40px;
  border-bottom: 1px solid #eee;
  color: #999;
}
.wait-list-container > .item > progress {
  position: absolute;
  left: 0px;
  right: 0px;
  top: 0px;
  bottom: 0px;
  display: block;
}
.wait-list-container > .item > .filename {
  padding-left: 10px;
  position: absolute;
  color: #fff;
}
.wait-list-container > .item > .progress {
  width: 100%;
  height: 100%;
  position: absolute;
  background-color: #86adad;
  box-shadow: 5px 5px 5px #769d9d inset;
}
.wait-list-container > .item > .progress > .loaded {
  width: 0%;
  height: 100%;
  background-color: #8468ab;
  transition: all .3s ease;
}
.wait-list-container.show {
  bottom: 0px;
}
